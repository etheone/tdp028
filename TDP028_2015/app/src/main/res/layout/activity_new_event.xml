<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.emil.socialize.NewEventActivity"
    android:padding="0dp"
    android:clickable="false">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:hint="Title" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:hint="Location" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textWebEmailAddress|none"
        android:ems="10"
        android:id="@+id/dateStart"
        android:layout_below="@+id/editText2"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:onClick="selectDate"
        android:hint="Start date"
        android:linksClickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/timeStart"
        android:layout_alignTop="@+id/dateStart"
        android:layout_toEndOf="@+id/dateStart"
        android:layout_marginRight="15dp"
        android:onClick="selectTime"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="Start time" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/dateEnd"
        android:layout_below="@+id/dateStart"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:onClick="selectDate"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="End date" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/timeEnd"
        android:layout_alignTop="@+id/dateEnd"
        android:layout_toEndOf="@+id/dateEnd"
        android:layout_marginRight="15dp"
        android:onClick="selectTime"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="End time" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText7"
        android:layout_below="@+id/dateEnd"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:hint="Description" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText8"
        android:layout_below="@+id/editText7"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:hint="Maximum attendants (0 = unlimited)" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/button"
        android:layout_below="@+id/editText8"
        android:layout_alignStart="@+id/scrollView"
        android:layout_marginTop="36dp"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/button2"
        android:layout_alignTop="@+id/button"
        android:layout_toStartOf="@+id/button"
        android:layout_margin="0dp" />


</RelativeLayout>
