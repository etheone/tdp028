<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.emil.socialize.EventInfo">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eventname"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#010101"
        android:textStyle="bold"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum descriptum"
        android:id="@+id/description"
        android:layout_marginRight="10dp"
        android:textColor="#6f7b80"
        android:textSize="17dp"
        android:layout_below="@+id/attenders"
        android:layout_alignStart="@+id/title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adress"
        android:id="@+id/adress"
        android:layout_marginRight="10dp"
        android:textColor="#6f7b80"
        android:textSize="15dp"
        android:layout_below="@+id/ends"
        android:layout_alignStart="@+id/ends"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attenders: 1/20"
        android:id="@+id/attenders"
        android:layout_marginRight="10dp"
        android:textColor="#6f7b80"
        android:textSize="17dp"
        android:textAlignment="viewEnd"
        android:layout_below="@+id/title"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Starts: 12:30 15/12/2015"
        android:id="@+id/starts"
        android:textColor="#6f7b80"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/description"
        android:textSize="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ends: 13:30 15/12/2015"
        android:id="@+id/ends"
        android:textColor="#6f7b80"
        android:layout_below="@+id/starts"
        android:layout_alignStart="@+id/starts"
        android:layout_marginTop="10dp"
        android:textSize="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Created by: hehe"
        android:id="@+id/creator"
        android:layout_marginRight="10dp"
        android:textColor="#6f7b80"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/joinButton"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:id="@+id/joinButton"
        android:layout_above="@+id/creator"
        android:layout_centerHorizontal="true"
        android:onClick="joinLeaveEvent"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attending:"
        android:id="@+id/textView3"
        android:layout_below="@+id/adress"
        android:layout_alignStart="@+id/adress"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usersAttending"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/adress"
        android:layout_marginTop="5dp" />

</RelativeLayout>
